{% extends 'base.html.twig' %}

{% block title %}Perso index{% endblock %}

{% block body %}
    <h1>Perso index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Hp</th>
                <th>Attaque</th>
                <th>Intelligence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for perso in persos %}
            <tr>
                <td>{{ perso.id }}</td>
                <td>{{ perso.username }}</td>
                <td>{{ perso.hp }}</td>
                <td>{{ perso.attaque }}</td>
                <td>{{ perso.intelligence }}</td>
                <td>
                    <a href="{{ path('app_perso_show', {'id': perso.id}) }}">show</a>
                    <a href="{{ path('app_perso_edit', {'id': perso.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_perso_new') }}">Create new</a>
{% endblock %}
