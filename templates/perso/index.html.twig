{% extends 'base.html.twig' %}

{% block title %}Liste des personnages{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Liste des personnages</h1>

    <div class="mb-3 text-end">
        <a href="{{ path('app_perso_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Créer un nouveau personnage
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Nom d'utilisateur</th>
                <th>HP</th>
                <th>Attaque</th>
                <th>Intelligence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for perso in persos %}
            <tr>
                <td>{{ perso.id }}</td>
                <td>{{ perso.username }}</td>
                <td>{{ perso.hp }}</td>
                <td>{{ perso.attaque }}</td>
                <td>{{ perso.intelligence }}</td>
                <td>
                    <a href="{{ path('app_perso_show', {'id': perso.id}) }}" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-eye"></i> Voir
                    </a>
                    <a href="{{ path('app_perso_edit', {'id': perso.id}) }}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Modifier
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucun personnage trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
