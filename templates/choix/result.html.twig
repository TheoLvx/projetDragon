{% extends 'base.html.twig' %}

{% block title %}Résultat pour {{ scenario.nom }}{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f8;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 40px 20px;
            text-align: center;
        }

        h1 {
            font-size: 2.8rem;
            color: #2c3e50;
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        p {
            font-size: 1.2rem;
            color: #34495e;
            line-height: 1.8;
            margin-bottom: 25px;
        }

        h2 {
            font-size: 2.2rem;
            color: #3498db;
            margin-top: 40px;
            text-transform: uppercase;
            font-weight: bold;
        }

        .result-text {
            font-size: 1.4rem;
            background-color: #ecf0f1;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
            color: #2c3e50;
            line-height: 1.6;
        }

        .result-text p {
            margin-bottom: 10px;
        }

        .back-button {
            display: inline-block;
            padding: 12px 25px;
            font-size: 1.1rem;
            background-color: #3498db;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 40px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .back-button:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .game-over-message {
            font-size: 1.5rem;
            color: #e74c3c;
            margin-top: 40px;
            font-weight: bold;
        }

        .result-text p span {
            font-weight: bold;
            color: #e74c3c;
        }
    </style>

    <div class="container">
        <h1>Résultat du scénario : {{ scenario.nom }}</h1>

        <p>Contexte : {{ scenario.contexte }}</p>
        <p>Niveau : {{ scenario.LeNiveau.nom }}</p>

        <h2>Résultat :</h2>
        <div class="result-text">
            <p>{{ choix.texte }}</p>
            <p>{{ choix.explications }}</p>

            {% if choix.attaque|number_format(0, '.', '') > 0 %}
                <p><span>Vous avez perdu {{ choix.hp }} hp</span></p>
            {% else %}
                <p><span>Vous avez gagné {{ choix.hp }} hp</span></p>
            {% endif %}

            {% if choix.intelligence|number_format(0, '.', '') > 0 %}
                <p><span>Vous avez perdu {{ choix.intelligence }} point d'intelligence</span></p>
            {% else %}
                <p><span>Vous avez gagné {{ choix.intelligence }} point d'intelligence</span></p>
            {% endif %}

            {% if choix.attaque|number_format(0, '.', '') > 0 %}
                <p><span>Vous avez perdu {{ choix.attaque }} point d'attaque</span></p>
            {% else %}
                <p><span>Vous avez gagné {{ choix.attaque }} point d'attaque</span></p>
            {% endif %}
        </div>

        {% if isGameOver %}
            <p class="game-over-message">Fin du jeu : Votre personnage est mort !</p>
        {% elseif nextLevel %}
            <a href="{{ path('app_scenario_niveau', {'niveau': nextLevel.numero}) }}" class="back-button">
                Passer au niveau suivant : {{ nextLevel.nom }}
            </a>
        {% else %}
            <p>Félicitations, vous avez terminé tous les niveaux !</p>
        {% endif %}
    </div>
{% endblock %}
