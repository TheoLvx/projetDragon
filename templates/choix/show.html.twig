{% extends 'base.html.twig' %}

{% block title %}Détails du Choix{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4">Détails du Choix</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ choix.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ choix.texte }}</td>
            </tr>
            <tr>
                <th>HP</th>
                <td>{{ choix.hp }}</td>
            </tr>
            <tr>
                <th>Explications</th>
                <td>{{ choix.explications }}</td>
            </tr>
            <tr>
                <th>Intelligence</th>
                <td>{{ choix.intelligence }}</td>
            </tr>
            <tr>
                <th>Attaque</th>
                <td>{{ choix.attaque }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-3">
        <a href="{{ path('app_choix_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
        </a>
    </div>

    <div class="mb-3">
        <a href="{{ path('app_choix_edit', {'id': choix.id}) }}" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Modifier
        </a>
    </div>

    <div class="mt-4">
        {{ include('choix/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
