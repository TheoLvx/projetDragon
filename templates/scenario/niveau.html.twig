{% extends 'base.html.twig' %}

{% block title %}Scénarios pour le niveau {{ niveau }}{% endblock %}

{% block body %}
    <style>
        /* Style général */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        .title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 20px;
        }

        .perso-details {
            text-align: left;
            margin-bottom: 30px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .perso-details h2 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .perso-details ul {
            list-style-type: none;
            padding: 0;
        }

        .perso-details li {
            margin: 5px 0;
        }

        .scenarios-list {
            text-align: left;
            margin-top: 20px;
        }

        .scenario-item {
            background-color: #fff;
            border-radius: 8px;
            margin: 10px 0;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .scenario-link {
            text-decoration: none;
            color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .scenario-name {
            font-weight: bold;
        }

        .scenario-context {
            font-style: italic;
            color: #666;
        }

        .no-scenario {
            font-size: 1.2rem;
            color: #e74c3c;
            font-weight: bold;
            margin-top: 30px;
        }

        .btn-action {
            padding: 10px 20px;
            font-size: 1rem;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-action:hover {
            background-color: #2980b9;
        }
    </style>

    <div class="container">
        <h1 class="title">Bienvenue au niveau {{ niveau }}</h1>

        <!-- Détails du personnage -->
        <div class="perso-details">
            <h2>Détails du personnage</h2>
            <ul>
                <li><strong>Nom :</strong> {{ perso.username }}</li>
                <li><strong>HP :</strong> {{ perso.hp }}</li>
                <li><strong>Attaque :</strong> {{ perso.attaque }}</li>
                <li><strong>Intelligence :</strong> {{ perso.intelligence }}</li>
            </ul>
        </div>

        <!-- Liste des scénarios -->
        {% if scenarios is not empty %}
            <div class="scenarios-list">
                <ul>
                    {% for scenario in scenarios %}
                        <li class="scenario-item">
                            <a href="{{ path('app_choix_result', {'id': scenario.id}) }}" class="scenario-link">
                                <span class="scenario-name">{{ scenario.nom }}</span>
                                <span class="scenario-context">{{ scenario.contexte }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <p class="no-scenario">BRAVO C'EST GAGNE !</p>
        {% endif %}
    </div>
{% endblock %}
