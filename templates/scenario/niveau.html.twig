{% extends 'base.html.twig' %}

{% block title %}Scénarios pour le niveau {{ niveau.numero }}{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 20px;
            text-align: center;
        }

        .title {
            font-size: 2.5rem;
            color: #34495e;
            margin-bottom: 10px;
        }

        .subtitle {
            font-size: 1.2rem;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        .perso-details {
            text-align: left;
            margin-bottom: 40px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .perso-details h2 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .perso-details ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .perso-details li {
            margin: 8px 0;
            font-size: 1rem;
        }

        .scenarios-list {
            text-align: left;
        }

        .scenario-item {
            background-color: #ffffff;
            border-radius: 8px;
            margin: 15px 0;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .scenario-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15);
        }

        .scenario-link {
            text-decoration: none;
            color: #34495e;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .scenario-name {
            font-weight: bold;
        }

        .scenario-context {
            font-style: italic;
            color: #7f8c8d;
        }

        .no-scenario {
            font-size: 1.2rem;
            color: #e74c3c;
            font-weight: bold;
            margin-top: 30px;
        }

        .btn-action {
            padding: 12px 24px;
            font-size: 1rem;
            background-color: #3498db;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin-top: 20px;
        }

        .btn-action:hover {
            background-color: #2980b9;
            transform: scale(1.05);
        }
    </style>

    <div class="container">
        <h1 class="title">Bienvenue au niveau {{ niveau.numero }}</h1>

        <!-- Détails du personnage -->
        <div class="perso-details">
            <h2>Détails du personnage</h2>
            <ul>
                <li><strong>Nom :</strong> {{ perso.username }}</li>
                <li><strong>HP :</strong> {{ perso.hp }}</li>
                <li><strong>Attaque :</strong> {{ perso.attaque }}</li>
                <li><strong>Intelligence :</strong> {{ perso.intelligence }}</li>
            </ul>
        </div>

       

        <!-- Liste des scénarios -->
        {% if scenarios is not empty %}
            <div class="scenarios-list">
                <ul>
                    {% for scenario in scenarios %}
                        <li class="scenario-item">
                            <a href="{{ path('app_choix_result', {'id': scenario.id}) }}" class="scenario-link">
                                <span class="scenario-name">{{ scenario.nom }}</span>
                                <span class="scenario-context">{{ scenario.contexte }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <p class="no-scenario">BRAVO C'EST GAGNE !</p>
        {% endif %}
         <!-- Bouton spécifique pour le niveau 5 -->
        {% if niveau.numero == 5 %}
            <a href="{{ path('app_perso_index') }}" class="btn-action">Retour à la liste des personnages</a>
        {% endif %}
    </div>
{% endblock %}
